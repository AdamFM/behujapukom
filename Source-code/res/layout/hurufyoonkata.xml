<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="#ffffff"
    android:gravity="center_horizontal" >

    <TextView
        android:id="@+id/textView2"
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/texthuruf"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:text="Huruf Katakana dasar dengan menambahkan huruf ャ(ya), ュ(yu) dan ヨ(yo) yang ditulis lebih kecil daripada huruf dasar."
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/texthuruf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Huruf Yoon"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

</RelativeLayout>
