<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fikri.behujap.HomeActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="Solution Media Â© 2015"
        android:textColor="#000000" />

    <Button
        android:id="@+id/BtnLatHira"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/BtnHurufHira"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:background="#2ecc71"
        android:text="Latihan Hiragana"
        android:textSize="18dp" />

    <Button
        android:id="@+id/BtnHurufHira"
        android:layout_width="120dp"
        android:layout_height="185dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#2ecc71"
        android:drawableTop="@drawable/aha"
        android:text="Huruf Hiragana"
        android:textSize="18dp" />

    <Button
        android:id="@+id/BtnHurufKana"
        android:layout_width="120dp"
        android:layout_height="185dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#2ecc71"
        android:drawableTop="@drawable/ak"
        android:text="Huruf Katakana"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btnKata"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/BtnLatHira"
        android:layout_below="@+id/BtnLatHira"
        android:layout_marginTop="20dp"
        android:background="#2ecc71"
        android:text="Kosa Kata"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/btnKata"
        android:layout_below="@+id/btnKata"
        android:layout_marginTop="18dp"
        android:background="#2ecc71"
        android:text="Tentang Pembuat"
        android:textSize="18dp" />

</RelativeLayout>